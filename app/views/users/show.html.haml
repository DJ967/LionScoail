.grid-x
  .medium-4.cell

    %h1= @user.username

    - if @user.avatar.attached?
      = image_tag @user.avatar.variant(resize_to_limit: [200, 200])

    %section.stats= render 'shared/stats'
    = render 'follow_form', user: @user if user_signed_in?
  .medium-8.cell
    %h3
      Posts for this user (#{@user.posts.count})

    - @user.posts.each do |post|
      .callout
        %br/
        .center
        - if post.picture.attached?
          .thumbnail= image_tag post.picture.variant(resize: "200x200")
        %br/
        = post.content
        %br/
        = link_to 'Comments', post, class: "dude"
        = link_to 'Destroy', post, method: :delete,
        data: { confirm: 'Are you sure? You do know this is not comeing back' }, class: "dude" if current_user?(post.user)
        %br/
    %br

%h3 About this User
.callout
  %p= @user.body
%br/

- if current_user.role == "admin"
  %h6= link_to "Delete", user_path, method: :delete, data: { confirm: "Really delete this user? What did they do." }, class: "button"

.grid-x
  .medium-4.cell
    - if current_user.role == "admin"
      = link_to 'Destroy', @room, method: :delete, data: { confirm: 'Are you sure? You do know this is not comeing back' }, class: "button"
    - if current_user.role == "bad_user"
      = render "sites/banned"
    - else
      %h3= @user.username
      - if @user.avatar.attached?
        = image_tag @user.avatar.variant(resize_to_fill: [150, 150])
      %section.stats= render 'shared/stats'
      %br/
      = render partial: 'rooms'

  .medium-8.cell
    - if current_user.role == "bad_user"
      = render "sites/banned"
    - else
      %h1
        This room is
        = @room.name
      = render 'room_messages/form'
      %div{id: "room_messages#{@room.id}"}
        = render @room_messages

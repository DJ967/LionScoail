.grid-x
  .medium-6.cell
    %h3 Send a message
    = form_for [@pconversation, @pmessage] do |f|
      .field
        = f.text_area :body, placeholder: "Your message"
      = f.submit "Send", class: "button"
    = link_to "Back", pconversations_path, class: "button"
  .medium-6.cell
    - if current_user.role == "bad_user"
      = render "shared/banned"
    - else
      %h1
      %div{id: "pmessages#{@pconversation.id}"}
        = render @pmessages
